@model IEnumerable<GamingPortal.Models.Gme>

@{
    ViewData["Title"] = "show";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        { 
        <div class="col-md-6">
            <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
            <img src="@Html.DisplayFor(modelItem => item.picLink)" class="img-thumbnail"/>
            <p> @Html.DisplayFor(modelItem => item.Description)</p>
            <a href="@Html.DisplayFor(modelItem => item.dLink)" class="btn btn-warning">Download</a>
        </div>
        }

        </div>

</div>

